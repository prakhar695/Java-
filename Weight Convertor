import java.util.Scanner;
public class weightConvertor {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("To enter the weight in kilogram choose 1");
        System.out.println("To enter the weight in lbs choose 2");
        int choice = sc.nextInt();

        if (choice == 1) {
            System.out.println("Enter the weight in kg: ");
            double weight = sc.nextDouble();

            double toLbs = weight * 2.20462;
            System.out.println("Your weight in lbs:" + toLbs);
        } 
        
        else {
            System.out.println("Enter the weight in lbs: ");
            double weight2 = sc.nextDouble();

            double tokgs = weight2 * 0.45359237;
            System.out.println("Your weight in kgs:" + tokgs);
        }
        
        sc.close();
    }
}
