import java.util.Scanner;

public class temperateConversion {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Choose the temperature which you want to convert (celsius/fahrenheit): ");
        String temp = sc.next();

        if (temp.equalsIgnoreCase("celsius")) {
            System.out.print("Enter the temperature in celsius: ");
            double temp1 = sc.nextDouble();

            double feh = 32 + (9.0 / 5.0 * temp1);

            System.out.println("Temperature in fahrenheit: " + feh);
        }
        else if (temp.equalsIgnoreCase("fahrenheit")) {
            System.out.print("Enter the temperature in fahrenheit: ");
            double temp2 = sc.nextDouble();

            double cel = (temp2 - 32) * 5.0 / 9.0;

            System.out.println("Temperature in celsius: " + cel);
        }
        else {
            System.out.println("Invalid choice! Please enter celsius or fahrenheit.");
        }

        sc.close();
    }
}
