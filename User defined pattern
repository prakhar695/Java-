import java.util.Scanner;

public class pattern{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter the number number of rows: ");
        int row= sc.nextInt();

        System.out.print("Enter the number number of column: ");
        int col= sc.nextInt();

        System.out.print("Enter the pattern: ");
        String ptr = sc.next();

        for(int i=0; i<row; i++){
            for(int j=0; j<col; j++){
                System.out.print(ptr);
            }
            System.out.println();
        }

        sc.close();

    }
}
